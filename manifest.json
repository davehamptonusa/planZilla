{
  // Required
  "name": "planZilla",
  "version": "0.3.3",

  // Recommended
  "description": "A jQuery Based overlay to bugzilla that allows for project and release tracking and charting",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  //"default_locale": "en",

  /* Pick one (or none)
  "browser_action": {...},
  "page_action": {...},
  "theme": {...},*/

  // Add any of these that you need
  "background_page": "planZilla.html",
  //"chrome_url_overrides": {...},
  "content_scripts": [{
    "matches": ["https://bugzilla.vclk.net/*"],
    "css": ["css/planZilla.css"],
    "js":  [
      "jQuery.js", 
      "jquery.xml2json.js", 
      "jquery.tools.min.js", 
      "jquery.flot.min.js",
      "jquery.flot.stack.min.js",
      "underscore-min.js",
      "planZilla.js",
      "planZilla.flot.js"],
    "run_at": "document_start"
  }],
  //"minimum_chrome_version": "versionString",
  //"options_page": "aFile.html",
  "permissions": [
     "tabs",
     "https://bugzilla.vclk.net/"
  ]
  //"plugins": [...],
  //"update_url": "http://path/to/updateInfo.xml"
}
